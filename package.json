{
  "name": "@threads/isomorphic-video-render",
  "version": "0.0.0",
  "files": [
    "lib/",
    "browser/",
    "node/"
  ],
  "repository": "https://github.com/ThreadsStyling/isomorphic-video-render.git",
  "dependencies": {},
  "devDependencies": {
    "@moped/rule-file": "^0.0.9",
    "@threads/tslint": "^3.3.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.5.2",
    "@types/rimraf": "^2.0.2",
    "ffbinaries": "^1.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.6.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack": "^4.16.1",
    "webpack-serve": "^2.0.2"
  },
  "scripts": {
    "prebuild": "node generate-filter-register && rimraf lib/ && rimraf browser/ && rimraf node/",
    "build": "tsc",
    "postbuild": "node generate-public && rimraf lib/node/__tests__",
    "prepare": "yarn build",
    "start": "webpack-serve ./webpack.config.js",
    "pretest": "node src/node/__tests__/download-ffmpeg",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.*/__tests__/.*\\.test\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
